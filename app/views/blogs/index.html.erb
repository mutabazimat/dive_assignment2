<h1>List of blogs</h1>
<%= link_to 'New blog', new_blog_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
  </tr>
<% end %>
</table>
<%= link_to 'Create PDF document', 'blogs.pdf' %>